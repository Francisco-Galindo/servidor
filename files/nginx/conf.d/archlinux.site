alias /srv/archlinux/;

# Directory listing
autoindex on;
autoindex_exact_size off;
autoindex_localtime on;

# Where Nginx will log archlinux requests
access_log /var/log/nginx/archlinux_access.log;
error_log /var/log/nginx/archlinux_error.log;

# Browsers will cache the content for as long as possible
expires max;
